{% extends ":home:base.html.twig" %}

{% block style %}
    <link rel="stylesheet" href="{{ asset('css/home_form_page.css') }}"/>
{% endblock style %}

{% block body %}
<div role="main" id="main" class="containerMobileFullWidth">

    <section class="row-fluid organized">
        <div class="containerCentered">
            <div class="span12">
                <h2 class="large">{{ 'home.login.forgot_password'|trans }}</h2>
                <div id="content" class="contentContainer" style="width: 60%; margin-top: 0px">
                    {% if invalid_username is defined %}
                        <div id="notifications" class="notifications" tabindex="-1" style="margin-left: 4%">
                            <p class="notification notification-critical" role="alert">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</p>
                        </div>
                    {% endif %}
                    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                        <div id="passwordSection" class="clearfix">
                            <div class="textInput">
                                <div class="fieldWrapper">
                                    <label for="username" class="fieldLabel">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label>
                                    <input type="text" id="username" name="username" placeholder="{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}" required="required" />
                                </div>
                            </div>
                        </div>
                        <div class="actions actionsSpaced">
                            <button class="button actionContinue" type="submit" id="btnLogin" name="btnLogin" value="Login">
                                {{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock body %}
